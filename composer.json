{
  "name": "akeeba/awf",
  "type": "library",
  "description": "A framework for single-source standalone apps, Joomla! components and WordPress plugins",
  "require": {
    "php": ">=5.4.0",
    "ext-curl": "*",
    "ext-simplexml": "*",
    "ext-pdo": "*"
  },
  "keywords": [
    "framework",
    "joomla",
    "wordpress"
  ],
  "homepage": "https://github.com/akeeba/awf",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Nicholas K. Dionysopoulos",
      "email": "nicholas_NO_SPAM_PLEASE@akeeba.com",
      "homepage": "http://www.dionysopoulos.me",
      "role": "Lead Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Awf\\": "src/"
    },
    "files": ["src/Utils/helpers.php"]
  },
  "version": "0.0.1",
  "require-dev": {
    "mikey179/vfsstream": "v1.2.0",
    "phpunit/phpunit": "4.2.*",
    "phpunit/dbunit": "1.3.*",
    "fiunchinho/phpunit-randomizer": "1.0.*"
  }
}
